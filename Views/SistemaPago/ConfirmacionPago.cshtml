@model MUSEODESCALZOS.ViewModel.ConfirmacionPagoViewModel

@{
    Layout = null; 
}

<html>
 <head>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet"/>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;700&display=swap" rel="stylesheet"/>  <style>
   body {
            font-family: 'Roboto', sans-serif;
            background-color: #F4F1EC;
        }
  </style>
 </head>
<body class="d-flex justify-content-center align-items-center min-vh-100">
   <div class="bg-white p-4 shadow-lg" style="max-width: 100%; width: 100%;">
        <div class="d-flex justify-content-between align-items-start">
            <div>
                <h1 class="display-1 fw-light">MU<br>SEO</h1>
                <p class="mt-2 small">DE LOS DECALZOS</p>
                <div class="mt-4">
                    <i class="fas fa-asterisk fa-2x"></i>
                </div>
            </div>
        </div>
        <div class="text-end">
            <p class="small">
            FACTURA: 12 – 345
            </p>
            <p class="h4 fw-bold mt-2">
            @Model.Cliente.Nombres
            </p>
            <p class="h4 fw-bold mt-2">
            @Model.Cliente.Apellidos
            </p>
            <p class="h4 fw-bold mt-2">
            @Model.Cliente.NumDoc
            </p>
        </div>
        <div class="mt-4">
                <h2 class="fw-bold">INFORMACIÓN DE PAGO</h2>
                <table class="table">
                <thead>
                    <tr>
                        <th scope="col">DESCRIPCIÓN</th>
                        <th scope="col">TOTAL</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var evento in Model.Eventos)
                    {
                        <tr>
                            <td>@evento.Evento.Nombre - Cantidad: @evento.Cantidad</td>
                            <td>@evento.PrecioTotal</td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>

        <div class="mt-4">
                <p class="mt-2">
                    MUSEO.<br>
                    DESCALZOS<br>
                </p>
                <p class="mt-4">
                    Alameda de los Descalzos <br>
                    Rímac 15093

                </p>
                <p class="mt-4">
                    (55) 1234 – 5678<br>
                    museo@ofmsolano.org.pe
                </p>
            </div>
            <div class="mt-4 d-flex justify-content-center">
                <div class="border-start border-dark ps-4">
                    <p class="small">WWW.MUSEODESCALZOS.COM</p>
                </div>
            </div>
        </div>
    </div>
 </body>
</html>