@model List<MuseoDescalzos.Models.Noticia> 

<div class="container mt-5">
    <h2>Noticias</h2>
    <div class="row">
        @foreach (var noticia in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card">
                    <img src="@noticia.Rutalmagen" class="card-img-top" alt="Noticia">
                    <div class="card-body">
                        <h5 class="card-title">@noticia.Titulo</h5>
                        <p class="card-text">@noticia.Descripción</p>
                        <p class="card-text text-muted">@noticia.FechaPublicación.ToString("dd/MM/yyyy")</p>
                        <a href="@Url.Action("DetalleNoticia", "Noticias", new { id = noticia.IDNoticia })" class="btn btn-primary">Leer más</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
