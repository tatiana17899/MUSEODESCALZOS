@using MUSEO_DE_LOS_DESCALZOS.ViewModel
@model AlquilerViewModel

@{
    ViewData["Title"] = "Lista de Alquileres";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<style>
    .estado-disponible {
        width: 20px;
        height: 20px;
        background-color: green;
        border-radius: 50%;
        display: inline-block;
    }

    .estado-no-disponible {
        width: 20px;
        height: 20px;
        background-color: red;
        border-radius: 50%;
        display: inline-block;
    }
</style>

<div class="content flex-grow-1" id="contenido">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3">@ViewData["Title"]</h1>
        <hr>
    </div>
    <div class="card">
        <div class="card-header">
            <h5 class="card-title d-flex align-items-center">
                <i class="fa-sharp fa-solid fa-person"></i> Historial de Alquileres
            </h5>
        </div>
        <div class="card-body">
            <!-- Botón para abrir el modal de crear nuevo guía -->
            <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#myModal"
                id="btnCrear">
                Crear Alquiler
            </button>
            <hr>
            <div class="container">
                <table id="guiaTable" class="table table-striped table-bordered" style="padding: 10px;">
                    <thead>
                        <tr>
                            <th>Titulo</th>
                            <th>Caracteristicas</th>
                            <th>Capacidad</th>
                            <th>Imagenes</th>
                            <th>Disponible</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var alquiler in Model.ListAlquiler)
                        {
                            <tr>
                                <td>@alquiler.Titulo</td>       
                                <td>@alquiler.Caracteristicas</td>
                                <td>@alquiler.Capacidad</td>
                                <td>
                                  @if (alquiler.Imagenes != null && alquiler.Imagenes.Count > 0)
                                    {
                                        var imagen = alquiler.Imagenes.FirstOrDefault();
                                        if (imagen != null && !string.IsNullOrEmpty(imagen.Rutalmagen))
                                        {
                                            <img src="@imagen.Rutalmagen" alt="@alquiler.Titulo" style="width:100px; height:auto;" />
                                        }
                                    }
                                    else
                                    {
                                        <span>No disponible</span>
                                    }
                                </td>
                                <td>
                                    <span class="estado-@(alquiler.Disponible ? "disponible" : "no-disponible")"></span>
                                </td>
                                <td>
                                    <!-- Botón para abrir el modal de editar guía -->
                                    <button type="button" class="btn btn-primary btn-sm" data-bs-toggle="modal"
                                        data-bs-target="#myModal" onclick="editAlquiler('@alquiler.IDAlquileres')">
                                        <i class="fa-solid fa-pencil"></i>
                                    </button>
                                    <form asp-action="Eliminar" asp-controller="AlquilerAdmin" method="post"
                                        style="display:inline;">
                                        <input type="hidden" name="id" value="@alquiler.IDAlquileres" />
                                        <button type="button" class="btn btn-danger btn-sm"
                                            onclick="confirmarEliminacion('@alquiler.IDAlquileres')">
                                            <i class="fa-solid fa-trash"></i>
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="card mt-3">
        <div class="card-header">
            <h5 class="card-title d-flex align-items-center">
                <i class="fa-sharp fa-solid fa-list-check"></i> Reserva de Alquileres
            </h5>
        </div>
        <div class="card-body">
            <!-- Botón para abrir el modal de crear nuevo guía -->
            <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#myModal"
                id="btnCrear">
                Crear Reserva Alquiler
            </button>
            <hr>
            <div class="container">
                <table id="guiaTabletarea" class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>Alquiler</th>
                            <th>Cliente</th>
                            <th>Cantidad</th>
                            <th>Hora Incio</th>
                            <th>Hora Fin</th>
                            <th>Precio Total</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var alquiler in Model.ListAlquiler)
                        {
                            <tr>
                                <td>@Model.Cliente</td>
                                <td>@Model.Alquiler</td>
                                <td>@Model.HoraInicio</td>
                                <td>@Model.HoraFin</td>
                                <td>@Model.CantPersona</td>
                                <!--<td>/*Precio</td>-->
                                <!-- Botón para abrir el modal de editar Reserva Alquiler -->
                                <td>
                                    <button type="button" class="btn btn-primary btn-sm" data-bs-toggle="modal"
                                        data-bs-target="#myModal" onclick="editAlquiler('@alquiler.IDAlquileres')">
                                        <i class="fa-solid fa-pencil"></i>
                                    </button>
                                    <form asp-action="Eliminar" asp-controller="AlquilerAdmin" method="post"
                                        style="display:inline;">
                                        <input type="hidden" name="id" value="@alquiler.IDAlquileres" />
                                        <button type="button" class="btn btn-danger btn-sm"
                                            onclick="confirmarEliminacion('@alquiler.IDAlquileres')">
                                            <i class="fa-solid fa-trash"></i>
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Modal para Crear/Editar Alquiler -->
<div class="modal fade" id="myModal" tabindex="-1" aria-labelledby="exampleModalLabel">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header" style="background-color: #1D3860; color: white;">
                <h5 class="modal-title" id="myModalLabel">Crear Reserva Alquiler</h5>
            </div>
            <div class="modal-body">
                <form asp-controller="AlquilerAdmin" asp-action="Guardar" method="post" id="formAlquiler">
                    <input type="hidden" asp-for="FormAlquiler.IDAlquileres" id="IDAlquiler" />
                    <div class="grid grid-cols-2 gap-4 mb-4">
                        <div>
                            <label asp-for="FormAlquiler.Titulo" class="block text-gray-700">Titulo</label>
                            <input type="text" id="titulo" class="w-full border border-gray-300 rounded p-2"
                                asp-for="FormAlquiler.Titulo">
                        </div>
                        <div>
                            <label asp-for="FormAlquiler.Caracteristicas"
                                class="block text-gray-700">Caracteristicas</label>
                            <input type="text" id="caracteristicas" class="w-full border border-gray-300 rounded p-2"
                                asp-for="FormAlquiler.Caracteristicas">
                        </div>
                    </div>
                    <div class="mb-4">
                        <label asp-for="FormAlquiler.Capacidad" class="block text-gray-700">Capacidad</label>
                        <input type="email" id="capacidad" class="w-full border border-gray-300 rounded p-2"
                            asp-for="FormAlquiler.Capacidad">
                    </div>
                    <div class="grid grid-cols-2 gap-4 mb-4">
                        <div>
                            <label asp-for="FormAlquiler.Imagenes" class="block text-gray-700">Imagenes</label>
                            <input type="file" id="imagen" class="w-full border border-gray-300 rounded p-2"
                                asp-for="FormAlquiler.Imagenes">
                        </div>
                        <div>
                            <label asp-for="FormAlquiler.Disponible" class="block text-gray-700">Disponible</label>
                            <input type="text" id="disponible" class="w-full border border-gray-300 rounded p-2"
                                asp-for="FormAlquiler.Disponible">
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                        <button type="button" class="btn btn-primary" onclick="confirmarGuardar()">Guardar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Modal para Crear/Editar Reservar Alquiler -->
<div class="modal fade" id="myModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header" style="background-color: #1D3860; color: white;">
                <h5 class="modal-title" id="myModalLabel">Crear Reseva Alquiler</h5>
            </div>
            <div class="modal-body">
                <form asp-controller="AlquilerAdmin" asp-action="Guardar" method="post" id="formAlquiler">
                    <input type="hidden" asp-for="FormAlquiler.IDAlquileres" id="IDAlquileres" />
                    <div class="grid grid-cols-2 gap-4 mb-4">
                        <div>
                            <label asp-for="FormAlquiler.Titulo" class="block text-gray-700">Titulo</label>
                            <input type="text" id="titulo" class="w-full border border-gray-300 rounded p-2"
                                asp-for="FormAlquiler.Titulo">
                        </div>
                        <div>
                            <label asp-for="FormAlquiler.Caracteristicas"
                                class="block text-gray-700">Caracteristicas</label>
                            <input type="text" id="caracteristicas" class="w-full border border-gray-300 rounded p-2"
                                asp-for="FormAlquiler.Caracteristicas">
                        </div>
                    </div>
                    <div class="mb-4">
                        <label asp-for="FormAlquiler.Capacidad" class="block text-gray-700">Capacidad</label>
                        <input type="email" id="capacidad" class="w-full border border-gray-300 rounded p-2"
                            asp-for="FormAlquiler.Capacidad">
                    </div>
                    <div class="grid grid-cols-2 gap-4 mb-4">
                        <div>
                            <label asp-for="FormAlquiler.Imagenes" class="block text-gray-700">Imagenes</label>
                            <input type="file" id="imagen" class="w-full border border-gray-300 rounded p-2"
                                asp-for="FormAlquiler.Imagenes">
                        </div>
                        <div>
                            <label asp-for="FormAlquiler.Disponible" class="block text-gray-700">Disponible</label>
                            <input type="text" id="disponible" class="w-full border border-gray-300 rounded p-2"
                                asp-for="FormAlquiler.Disponible">
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                        <button type="button" class="btn btn-primary" onclick="confirmarGuardar()">Guardar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>



@section scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.datatables.net/2.1.5/js/dataTables.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        // Define la función editAlquiler globalmente
        function editAlquiler(idAlquiler) {
            $.ajax({
                url: '@Url.Action("GetAlquilerById", "AlquilerAdmin")',
                type: 'GET',
                data: { id: idAlquiler },
                success: function (data) {
                    $('#IDAlquiler').val(data.idAlquiler);
                    $('#titulo').val(data.titulo);
                    $('#caracteristicas').val(data.caracteristicas);
                    $('#capacidad').val(data.capacidad);
                    $('#imagen').val(data.imagen);
                    $('#disponible').val(data.disponibilidad);
                    $('#myModalLabel').text('Editar Alquiler');
                },
                error: function (xhr, status, error) {
                    Swal.fire({
                        title: "Error",
                        text: "Hubo un error al obtener los datos del Alquiler.",
                        icon: "error"
                    });
                    console.log(error);
                }
            });
        }

        $(document).ready(function () {
            // Inicializar DataTables
            $('#guiaTable').DataTable({
                responsive: true,
                autoWidth: false,
                lengthMenu: [3, 5, 7, 9],
                pageLength: 5
            });

            // Evento click para crear un alquiler
            $('#btnCrear').click(function () {
                $('#IDAlquileres').val(0);
                $('#titulos').val('');
                $('#caracteristicas').val('');
                $('#capacidad').val('');
                $('#imagen').val('');
                $('#disponible').text('Crear Alquiler');
            });
        });

        function confirmarGuardar() {
            Swal.fire({
                title: "¿Estás seguro?",
                text: "¡No podrás revertir esto!",
                icon: "warning",
                showCancelButton: true,
                confirmButtonColor: "#3085d6",
                cancelButtonColor: "#d33",
                confirmButtonText: "Sí, guardar"
            }).then((result) => {
                if (result.isConfirmed) {
                    $('#formAlquiler').submit();
                }
            });
        }

        function confirmarEliminacion(idAlquiler) {
            Swal.fire({
                title: "¿Estás seguro?",
                text: "¡No podrás revertir esto!",
                icon: "warning",
                showCancelButton: true,
                confirmButtonColor: "#3085d6",
                cancelButtonColor: "#d33",
                confirmButtonText: "Sí, eliminar",
                cancelButtonText: "Cancelar"
            }).then((result) => {
                if (result.isConfirmed) {
                    var form = $('<form>', {
                        'method': 'POST',
                        'action': '@Url.Action("Eliminar", "AlquilerAdmin")'
                    }).append($('<input>', {
                        'type': 'hidden',
                        'name': 'id',
                        'value': idAlquiler
                    }));

                    $('body').append(form);
                    form.submit();
                }
            });
        }

        function setAlquilerId(alquilerId) {
            $.ajax({
                type: "POST",
                url: '@Url.Action("SetAlquilerId", "AlquilerAdmin")',
                data: { IDAlquileres: alquilerId },
                success: function (response) {
                    $("#alquilerId").val(alquilerId);
                }
            });
        }
    </script>
}

