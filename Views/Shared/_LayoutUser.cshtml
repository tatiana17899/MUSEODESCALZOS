<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MUSEODESCALZOS</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MUSEODESCALZOS.styles.css" asp-append-version="true" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <!--Icon Google-->
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200"
    />
    <!--Font Family Google-->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
</head>
<body>
    <div>
        <main class="mb-5">
            <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
                <div class="container-fluid">
                    <a class="navbar-brand ms-3" href="#">MUSEO DE LOS DESCALZOS</a>
                    <button
                    class="navbar-toggler"
                    type="button"
                    data-bs-toggle="collapse"
                    data-bs-target="#navbarSupportedContent"
                    aria-controls="navbarSupportedContent"
                    aria-expanded="false"
                    aria-label="Toggle navigation"
                    >
                    <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-0 mb-lg-0 mx-auto">
                        <li class="nav-item mx-4">
                        <a class="nav-link" href="@Url.Action("Index", "Home")">
                            <span class="material-symbols-outlined">home</span>
                            <p class="title-link">Inicio</p>
                        </a>
                        </li>
                        <li class="nav-item mx-4">
                        <a class="nav-link" href="@Url.Action("Listar", "Alquiler")">
                            <span class="material-symbols-outlined">attach_money</span>
                            <p class="title-link">Catálogo</p>
                        </a>
                        </li>
                        <li class="nav-item mx-4">
                        <a class="nav-link" href="@Url.Action("Visita", "Home")">
                            <span class="material-symbols-outlined"
                            >calendar_month</span
                            >
                            <p class="title-link">Visita</p>
                        </a>
                        </li>
                        <li class="nav-item mx-4">
                        <a class="nav-link" href="@Url.Action("Index", "Carrito")">
                            <span class="material-symbols-outlined icon">shopping_cart</span>
                            <p class="title-link">Carrito</p>
                        </a>
                        </li>
                        <li class="nav-item mx-4">
                        <a class="nav-link" href="@Url.Action("Index", "Contacto")">
                            <span class="material-symbols-outlined icon">email</span>
                            <p class="title-link">Contacto</p>
                        </a>
                        </li>
                    </ul>
                    <form class="d-flex">
                        <partial name="_LoginPartial" />
                    </form>
                    </div>
                </div>
            </nav>
            <div role="main">
                @RenderBody()
            </div>
        </main>
        <footer class="text-center">
                <h3>Visitanos en</h3>
                <p>Alameda de los Descalzos, Rímac 15093</p>
                <p>Email:museodescalzos@gmail.com</p>
                <a class="nav-link" asp-area="Identity" asp-page="/Account/Login" style="color: white;">      
                    <p class="title-link">Administrador</p>
                </a>
                <p class="copyright">
                © 2024 Museo de los Descalzos. Todos los derechos reservados.
                </p>
        </footer>
    </div>
