@model MuseoDescalzos.Models.Evento

@{
    ViewData["Title"] = "DetalleEvento";
}

<style>
    .text-margin {
        margin-left: 250px;
    }

    <style>
    .tienda-header {
      text-align: left;
      font-weight: bold;
      margin-bottom: 10px;
    }
    
    .separator {
      border-top: 1px solid #000;
      margin-bottom: 20px;
    }
</style>
</style>

<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" rel="stylesheet">
</head>

<div class="container mt-5">
    <div class="tienda-header">
        <h3>EVENTOS<samp>"@Model.Nombre"</samp></h3>
    </div>
    <div class="separator"></div>
</div>

<div class="d-flex justify-content-center mt-5">
    <div class="border border-dark" style="width:700px; max-width: 80%;" mx-2 mb-2>        
        <div class="card h-75 mb-3"> 
            <div class="row g-0">
                <div class="col-md-4">
                    <img src="@Model.RutalImagen" class="img-fluid rounded-start m-2" style="height: 180px; width: 250px;" alt="imagen">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">@Model.Nombre</h5>
                         <i class="bi bi-calendar"></i> @Model.Fecha.ToString()
                        <p>@Model.Descripción</p>
                        <div style="display: flex; align-items: center;">
                            <a asp-controller="ReservarEvento" asp-action="Index" asp-route-id="@Model.IDEvento" class="btn btn-dark me-2" style="font-size: 15px;">
                                <span class="material-symbols-outlined" style="margin-right: 5px;">shopping_cart</span>Reservar Evento
                            </a>
                            <p class="card-text mb-0 fw-bold" style="font-size: 15px; margin-left: 5rem;">
                                s/@Model.Precio
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@if(Model.Actividades != null && Model.Actividades.Any())
        {
            <table class="table table-dark table-striped">
                <thead>
                    <tr>
                        <th>Hora Inicial</th>
                        <th>Hora Final</th>
                        <th>Actividad</th>
                        <th>Guía</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var actividad in Model.Actividades)
                    {
                        <tr>
                            <td>@actividad.Hora_Inicial</td>
                            <td>@actividad.Hora_Final</td>
                            <td>@actividad.Actividad</td>
                            <td>@(actividad.Guía != null ? actividad.Guía.Nombres : "")</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p class="text-center mt-5">No hay actividades registradas para este evento.</p>
        }