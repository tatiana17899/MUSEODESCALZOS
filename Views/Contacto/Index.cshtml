@using MUSEO_DE_LOS_DESCALZOS.ViewModel
@model ContactoViewModel
@{
    ViewData["Title"] = "Contacto";
}

<div class="container d-flex align-items-center justify-content-center vh-100">
    <div>
        <h1 class="text-center mb-4 mt-4">Formulario de contacto</h1>
        <div class="row justify-content-center">
            <div class="col-md-6">
                <form id="contactForm" asp-controller="Contacto" asp-action="Enviar" method="post">
                    <div class="form-group">
                        <label asp-for="FormContacto.Name" class="control-label"></label>
                        <input asp-for="FormContacto.Name" class="form-control" required />
                    </div>
                    <div class="form-group">
                        <label asp-for="FormContacto.Email" class="control-label"></label>
                        <input asp-for="FormContacto.Email" class="form-control" required />
                    </div>
                    <div class="form-group">
                        <label asp-for="FormContacto.Message" class="control-label"></label>
                        <textarea asp-for="FormContacto.Message" class="form-control" required></textarea>
                    </div>
                    <div class="form-group text-center">
                        <button type="submit" class="btn btn-primary mt-3">Enviar</button>
                    </div>
                </form>
                <h1>@ViewData["Message"]</h1>
            </div>
        </div>
    </div>
</div>

<!-- Incluir SweetAlert aquí -->
@section scripts{
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<script>
    document.getElementById('contactForm').onsubmit = function(event) {
        event.preventDefault(); // Prevenir el envío normal del formulario

        // Mostrar SweetAlert
        Swal.fire({
            title: "¡Registrado!",
            text: "Tu mensaje ha sido enviado correctamente.",
            icon: "success",
            confirmButtonText: "Aceptar"
        }).then((result) => {
            if (result.isConfirmed) {
                // Si el usuario acepta, envía el formulario
                this.submit(); // Enviar el formulario
            }
        });
    };
</script>
}