@using MUSEO_DE_LOS_DESCALZOS.ViewModel
@model ContactoViewModel
@{
    ViewData["Title"] = "Contacto";
}

<div class="container d-flex align-items-center justify-content-center vh-100">
    <div>
        <h1 class="text-center mb-4 mt-4">Formulario de contacto</h1>
        <div class="row justify-content-center">
            <div class="col-6">
                <form id="contactForm" asp-controller="Contacto" asp-action="Enviar" method="post">
                    <div class="form-group">
                    <label asp-for="FormContacto.Name" class="control-label"></label>
                    <input asp-for="FormContacto.Name" class="form-control w-90" required />
                </div>
                <div class="form-group">
                    <label asp-for="FormContacto.Email" class="control-label"></label>
                    <input asp-for="FormContacto.Email" class="form-control w-100" required />
                </div>
                <div class="form-group">
                    <label asp-for="FormContacto.Message" class="control-label"></label>
                    <textarea asp-for="FormContacto.Message" class="form-control w-100" required></textarea>
                </div>

                    <div class="form-group text-center">
                        <button type="submit" style="background-color: black; color: white;" class="btn mt-3">Enviar</button>
                    </div>
                </form>
                <h1>@ViewData["Message"]</h1>
            </div>
        </div>
    </div>
</div>

<!-- Incluir SweetAlert aquí -->
@section scripts{
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<script>
    document.getElementById('contactForm').onsubmit = function(event) {
        event.preventDefault();

        Swal.fire({
            title: "¡Registrado!",
            text: "Tu mensaje ha sido enviado correctamente.",
            icon: "success",
            confirmButtonText: "Aceptar"
        }).then((result) => {
            if (result.isConfirmed) {
              
                this.submit(); 
        });
    };
</script>
}