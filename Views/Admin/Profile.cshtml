@model MuseoDescalzos.Models.Administrador
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="main-content">
    <h1>Perfil</h1>
    <div class="profile-container">
        <img src="@Model.Imagen" alt="Profile Picture" class="profile-picture">
        <div class="edit-icon">
            <i class="fas fa-pen-to-square"></i> <!-- √çcono de FontAwesome -->
        </div>
    </div>

    <form class="profile-form" method="post" asp-action="UpdateProfile">
        <input type="hidden" asp-for="IDAdministrador" />

        <div class="form-group">
            <label for="nombre">Nombre:</label>
            <input type="text" id="nombre" asp-for="Nombres" class="form-control" />
        </div>

        <div class="form-group">
            <label for="apellidos">Apellidos:</label>
            <input type="text" id="apellidos" asp-for="Apellidos" class="form-control" />
        </div>

        <div class="form-group">
            <label for="email">Email:</label>
            <input type="email" id="email" asp-for="Email" class="form-control" />
        </div>

        <div class="form-group">
            <label for="fecha-nacimiento">Fecha de Nacimiento:</label>
            <input type="date" id="fecha-nacimiento" asp-for="FechaNacimiento" class="form-control" />
        </div>

        <div class="form-group">
            <label for="documento">N¬∞ Documento:</label>
            <input type="text" id="documento" asp-for="NumDoc" class="form-control" />
        </div>

        <div class="form-group">
            <label for="provincia">Provincia:</label>
            <input type="text" id="provincia" asp-for="Provincia" class="form-control" />
        </div>

        <div class="form-group">
            <label for="distrito">Distrito:</label>
            <input type="text" id="distrito" asp-for="Distrito" class="form-control" />
        </div>

        <div class="form-group">
            <label for="direccion">Direcci√≥n:</label>
            <input type="text" id="direccion" asp-for="Direccion" class="form-control" />
        </div>

        <div class="form-group">
            <label for="contrasena">Contrase√±a:</label>
            <input type="password" id="contrasena" asp-for="Contrase√±a" class="form-control" />
            <span class="toggle-password">üëÅÔ∏è</span>
        </div>

        <button type="submit" class="save-button">Guardar</button>
    </form>
</div>
