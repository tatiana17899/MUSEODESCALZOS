@model MuseoDescalzos.Models.ClientesUsuarios

@{
    ViewData["Title"] = "Clientes y Usuarios";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>@ViewData["Title"]</h2>

<h3>Clientes</h3>
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nombres</th>
            <th>Apellidos</th>
            <th>Tipo de Documento</th>
            <th>Número de Documento</th>
            <th>País</th>
            <th>Número de Tarjeta</th>
            <th>Titular</th>
            <th>Fecha de Nacimiento</th>
            <th>Fecha de Registro</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var cliente in Model.Clientes)
        {
            <tr>
                <td>@cliente.IDCliente</td>
                <td>@cliente.Nombres</td>
                <td>@cliente.Apellidos</td>
                <td>@cliente.TipoDoc</td>
                <td>@cliente.NumDoc</td>
                <td>@cliente.Pais</td>
                <td>@cliente.NumTarjeta</td>
                <td>@cliente.Titular</td>
                <td>@cliente.FechaNacimiento.ToShortDateString()</td>
                <td>@cliente.FechaRegistro.ToShortDateString()</td>
            </tr>
        }
    </tbody>
</table>

<h3>Usuarios</h3>
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Usuario</th>
            <th>Email</th>
            <th>Contraseña</th>
            <th>Reestablecer</th>
            <th>Ruta Imagen</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var usuario in Model.Usuarios)
        {
            <tr>
                <td>@usuario.IDUsuario</td>
                <td>@usuario.usuario</td>
                <td>@usuario.Email</td>
                <td>@usuario.Contraseña</td>
                <td>@usuario.Reestablecer</td>
                <td>@usuario.Rutalmagen</td>
            </tr>
        }
    </tbody>
</table>
