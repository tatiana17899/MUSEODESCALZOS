@using MUSEO_DE_LOS_DESCALZOS.ViewModel
@model PasswordResetRequestViewModel
@{
    ViewData["Title"] = "Recuperar Contraseña";
    Layout = null;
}

<meta charset="utf-8" />
<meta name="viewport" content="width=device-width, initial-scale=1.0" />
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

<div class="bg-light d-flex flex-column align-items-center justify-content-center vh-100">
    <div class="text-center mb-4">
        <h1 class="fw-bold">Recuperar Contraseña</h1>
        <p class="text-muted">Ingresa tu correo electrónico, por favor</p>
    </div>
    <div class="card shadow-sm" style="width: 24rem; border: none;">
        <div class="card-body p-5">
            <form id="passwordResetForm" asp-controller="PasswordResetAdminController" asp-action="SendPasswordResetLink" method="post">
                <div class="mb-4">
                    <label asp-for="Email" class="form-label">Email:</label>
                    <input asp-for="Email" class="form-control" placeholder="Ingresa tu correo electrónico" required />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="d-grid">
                    <button type="submit" class="btn btn-primary">Recibir Correo</button>
                </div>
            </form>
            <!-- Mensaje de confirmación -->
            <div id="message" class="mt-4 text-center" style="display:none;">
                <span class="alert alert-success" id="success-message" style="display:none;"></span>
                <span class="alert alert-danger" id="error-message" style="display:none;"></span>
            </div>
        </div>
    </div>
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

<script>
    $(function () {
        $("#passwordResetForm").submit(function (event) {
            event.preventDefault();  
            var email = $("input[name='Email']").val();
            
            $.ajax({
                url: '@Url.Action("SendPasswordResetLink", "PasswordResetAdminController")',
                type: 'POST',
                data: { email: email },
                success: function (response) {
                    if (response.success) {
                        $("#success-message").text(response.message).show();
                        $("#error-message").hide();
                    } else {
                        $("#error-message").text(response.message).show();
                        $("#success-message").hide();
                    }
                    $("#message").show();
                },
                error: function () {
                    $("#error-message").text("Ocurrió un error al enviar el correo.").show();
                    $("#success-message").hide();
                    $("#message").show();
                }
            });
        });
    });
</script>
